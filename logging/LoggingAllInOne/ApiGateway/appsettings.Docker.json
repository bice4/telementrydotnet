{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "System": "Information"
      },
      "Using": [
        "Serilog.Sinks.Console",
        "Serilog.Sinks.Grafana.Loki"
      ]
    },
    "WriteTo": [
      {
        "Name": "GrafanaLoki",
        "Args": {
          "uri": "http://host.docker.internal:3100",
          "labels": [
            {
              "key": "app",
              "value": "ApiGateway"
            }
          ],
          "propertiesAsLabels": [
            "app"
          ]
        }
      }
    ],
    "Enrich": [
      "WithMachineName",
      "WithEnvironmentName",
      "WithThreadId"
    ]
  }
}